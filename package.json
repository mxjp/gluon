{
	"name": "@mxjp/gluon",
	"description": "Tiny signal based rendering library",
	"homepage": "https://github.com/mxjp/gluon",
	"keywords": [
		"reactive",
		"ui",
		"context",
		"declarative",
		"signals",
		"jsx",
		"web-components"
	],
	"license": "MIT",
	"version": "1.0.1",
	"type": "module",
	"main": "./dist/es/index.js",
	"exports": {
		".": "./dist/es/index.js",
		"./jsx-runtime": "./dist/es/jsx/runtime.js",
		"./jsx-dev-runtime": "./dist/es/jsx/dev-runtime.js"
	},
	"scripts": {
		"build": "concurrently npm:build:es npm:build:types && concurrently npm:build:bundles npm:build:tests",
		"build:es": "tsc -p tsconfig-es.json",
		"build:types": "tsc -p tsconfig-types.json",
		"build:bundles": "rollup --config",
		"build:tests": "tsc -p tests/tsconfig.json",
		"start": "concurrently npm:start:*",
		"start:es": "tsc -p tsconfig-es.json -w",
		"start:types": "tsc -p tsconfig-types.json -w",
		"start:tests": "tsc -p tests/tsconfig.json -w",
		"test": "node --enable-source-maps --test ./tests_out",
		"prepack": "npm run build && npm test && node scripts/prepack.js"
	},
	"devDependencies": {
		"@mxjp/gluon": "file:.",
		"@rollup/plugin-terser": "^0.4.4",
		"@types/jsdom": "^21.1.6",
		"@types/node": "^20.9.4",
		"concurrently": "^8.2.2",
		"jsdom": "^22.1.0",
		"prettier": "^3.1.0",
		"rollup": "^4.6.1",
		"rollup-plugin-prettier": "^4.1.1",
		"typescript": "^5.3.2"
	}
}
